{% block content %}
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <a href="/" class="navbar-brand">Conjure Backpack</a>
        {% if loggedIn %}
            <a href="/campaigns" class="nav-link text-light">Welcome, {{username}}</a>
        {% endif %} 

        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% if loggedIn %}
                {% if currentCampaignId != "" %}
                    <a href="/items" class="nav-link text-light">Items Library</a>
                {% endif %}
                <a href="/campaigns/" class="nav-link text-light">Campaigns</a>
                {% if currentCampaignId != "" %}
                    <a href="/backpacks/" class="nav-link text-light">Backpacks</a>
                {% endif %}
                {% if currentBackpackId != "" %}
                    <a href="/backpacks/{{currentBackpackId}}" class="nav-link text-light">{{currentBackpackName}}</a>
                {% endif %}
                <a href="/auth/logout" class="nav-link text-light">Log Out</a>
            {% else %}
                <a href="/auth/signup" class="nav-link text-light">Sign Up</a>
                <a href="/auth/login" class="nav-link text-light">Sign In</a>
            {% endif %}
        </div>
    </div>
</nav>
{% endblock %}