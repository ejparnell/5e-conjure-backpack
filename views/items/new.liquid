{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form class="form-inline" action="/items" method="POST">
        <fieldset>
            <legend>Create New Item</legend>                      
            <div class="form-group row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Name: </label>
                    <input 
                        type="text" 
                        name="name" 
                        placeholder="enter item's name"
                        class="form-control"
                        required
                    >
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Type: </label>
                    <select name="category" class="form-control">
                        <option value="Gear">Gear</option>
                        <option value="Weapon">Weapon</option>
                        <option value="Armor">Armor</option>
                        <option value="Magic Item">Magic Item</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 mb-3">
                <label class="form-label">Cost:</label>
                <input 
                    type="text" 
                    name="cost" 
                    placeholder="examples: '10gp', '1cp', 'Mark's First Born Child', etc." 
                    class="form-control"
                >
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Weight:</label>
                    <input 
                        type="number" 
                        name="weight" 
                        {% comment %} placeholder="enter item's weight" {% endcomment %}
                        class="form-control"
                        style = "width: 5em;"
                    >
                </div>
            </div>
            <div class="col-md-8 mb-3">
                <label class="form-label">Description:</label>
                <textarea 
                    type="text" 
                    name="desc" 
                    class="form-control"
                    rows="4"
                    placeholder="Enter description here...
(tip: if you need to add line breaks, type '&&')"
                ></textarea>
            </div>
            <div class="col-md-8 mb-3">
                <label class="form-label">Secrets:</label><br />
                <input class="form-check-input" type="checkbox" name="isSecret" checked>
                <label class="form-label">Secrets hidden from players</label>
                <textarea 
                    type="text" 
                    name="secrets" 
                    class="form-control"
                    rows="4"
                    placeholder="Enter anything you want hidden from players here...
So long as the above box is checked, only DM's will be able to see this.
(tip: if you need to add line breaks, type '&&')"
                ></textarea>
            </div>
        </fieldset>
        <input type="submit" value="Create New Item" class="btn btn-success">
    </form>
</div>
{% endblock %}