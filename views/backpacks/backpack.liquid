{% layout 'layout.liquid'%}
{% block content %}



<div>
    <h4 class="display-6">{{currentCampaignName}}</h4>
    <h4 class="display-6">{{currentBackpackName}}</h4>
    <a class="btn btn-success" href="../items/">Add Items to Backpack</a>
    <hr>
    {% assign items_sorted = items | sort: "name"%}
    {% comment %} <h2 class="display-6">All Examples</h2> {% endcomment %}
    <h2 class="display-8">All Items:</h2>
    <form action="../../../items/search/" method="GET">
        <fieldset class="input-group mb-3">
            {% comment %} <label for="exampleDataList" class="form-label">Search for an Item</label> {% endcomment %}
            <input class="form-control" list="datalistOptions" id="dataList" name ="name" placeholder="Type to search items..." autocomplete="off">
            <input type="submit" value="Search" class="btn btn-primary">
                
            <datalist id="datalistOptions">
                {% for item in items_sorted %}
                    <option value ="{{item.name}}">      
                {% endfor %}
            </datalist>
            
            </fieldset>
    </form>  
    <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="../../../items/">All</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="../../../items/filter/Gear">Gear</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="../../../items/filter/Weapon">Weapons</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="../../../items/filter/Armor">Armor</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="../../../items/filter/Magic%20Item">Magic Items</a>
        </li>
          {% if isMaster %}
            <li class="nav-item">
                <a class="nav-link active" href="/items/mine/">Created by {{username}}</a>
            </li>
        {% endif %}

    </ul>
    {% if items_sorted.length < 1%}
        <h2 class="display-6">You opened {{currentBackpackName}}, but all that came out was a moth and a puff of dust...</h2>
    {% endif %}
    <div class="row">     
        {% for example in items_sorted %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ example.name }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                Type: {{ example.category }}
                </h5>
                <p class="card-text">
                {% if example.weight%}
                    weight: {{ example.weight }}<br />
                {% endif %}
                {% if example.cost%}
                    cost: {{ example.cost }}
                {% endif %}
                </p>
            </div>
            <div class="card-footer">
                <div class="btn-group" style="width:100%">
                    <form action="{{currentBackpackId}}/{{example.id}}?_method=PUT" method="POST">
                        <input type="submit" value="Remove" class="btn btn-danger">
                    
               
                    <a href="/items/{{ example.id }}" class="btn btn-info">
                        View {{ example.title }}
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}


      