{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/campaigns/{{campaign.id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Create New Campaign</legend>
            <label class="form-label">Campaign Name: </label>
            <input type="text" name="name" required placeholder="enter name..." class="form-control" value="{{campaign.name}}">
            
            <label class="form-label">Campaign Description: </label>
            <textarea 
                name="description" 
                placeholder="enter description..."
                class="form-control"
                rows="4"    
            >{{campaign.description}}</textarea>
            
        </fieldset>
        <input type="submit" value="Update Campaign" class="btn btn-success">
    </form>
</div>
{% endblock %}